<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/results_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_results_top"
                android:layout_width="match_parent"
                android:layout_height="273dp"
                app:srcCompat="@drawable/dwuspadowy_symetryczny_budynek" />

            <TextView
                android:id="@+id/text_head2_H1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Wysokość do płatwi kalenicowej H1 = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_head2_H2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Wysokość do płatwi pośredniej H2 = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_head2_NK"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Liczba krokwi = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_head2_Pk"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Pole krokwi Pk = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_head2_Gamma"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Kąt krokwi "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_head2_Area"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Pole powierzchni dachu = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_results_imageA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/roof1_image"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/dwuspadowy_symetryczny_krokwia"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/text_body2_S"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Długość zaciosu pionowego S = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_body2_S1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Długość zaciosu poziomego S1 = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_body2_Lc"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Długość całkowita krokwi Lc = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_body2_Lp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Długość połaci Lp = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_body2_K2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Długość zacoisu K2 = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_body2_N1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Długość zacoisu N1 = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_body2_N2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Długość zacoisu N2 = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_body2_M1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Długość zacoisu M1 = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_body2_M2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/underline"
                android:gravity="start|fill"
                android:text="Długość zacoisu M2 = "
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>